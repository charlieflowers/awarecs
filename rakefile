case_files = FileList['unbuilt/cases/*.case', 'unbuilt/cases/*.coffee']

task :showlist do
  puts case_files.ext(".tokens")
end

task :default => :tokens

task :tokens => case_files.ext(".tokens")

rule ".tokens" => ".case" do |t|
  sh "coffee --tokens #{t.source} > #{t.name}"
end

rule ".tokens" => ".coffee" do |t|
  sh "coffee --tokens #{t.source} > #{t.name}"
end
